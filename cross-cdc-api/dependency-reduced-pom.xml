<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.cross_ni.cross.cdc</groupId>
  <artifactId>cdc-api</artifactId>
  <version>0.0.0-SNAPSHOT</version>
  <description>Implementation of CROSS CDC API.</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${version.maven.shade.plugin}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>${main.class}</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>3.2.0</version>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>target/jsonschema2pojo</source>
                <source>src-gen/main/java</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.jsonschema2pojo</groupId>
        <artifactId>jsonschema2pojo-maven-plugin</artifactId>
        <version>1.1.1</version>
        <executions>
          <execution>
            <id>generate-sink-pojos</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <sourceDirectory>${project.basedir}/src/main/resources/com/cross_ni/cross/cdc/model/sink</sourceDirectory>
              <targetPackage>com.cross_ni.cross.cdc.model.sink</targetPackage>
              <outputDirectory>${project.basedir}/src-gen/main/java</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>generate-source-pojos</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <annotationStyle>gson</annotationStyle>
              <sourceDirectory>${project.basedir}/src/main/resources/com/cross_ni/cross/cdc/model/source</sourceDirectory>
              <targetPackage>com.cross_ni.cross.cdc.model.source</targetPackage>
              <outputDirectory>${project.basedir}/src/main/java</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>confluent</id>
      <url>https://packages.confluent.io/maven/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>io.confluent</groupId>
      <artifactId>kafka-serde-tools-package</artifactId>
      <version>6.2.0</version>
      <type>pom</type>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>1.18.20</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <version.slf4j.simple>1.7.32</version.slf4j.simple>
    <version.kafka.streams>2.8.0</version.kafka.streams>
    <version.gson>2.8.8</version.gson>
    <version.avro>1.10.2</version.avro>
    <maven.compiler.target>${version.java}</maven.compiler.target>
    <version.maven.shade.plugin>3.2.4</version.maven.shade.plugin>
    <version.java>8</version.java>
    <version.reflections>0.9.11</version.reflections>
    <main.class>com.cross_ni.cross.cdc.Bootstrap</main.class>
    <maven.compiler.source>${version.java}</maven.compiler.source>
    <schema-registry-url>http://localhost:8081</schema-registry-url>
  </properties>
</project>
